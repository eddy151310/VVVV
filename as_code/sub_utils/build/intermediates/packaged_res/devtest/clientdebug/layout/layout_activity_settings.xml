<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CC_F1F2F6"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_title_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/CC_FFFFFF"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/re_settings_reset_login_pwd"
                    style="@style/common_item_style">

                    <TextView
                        android:id="@+id/tv_set_login_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="@string/Setting_B0"
                        android:textColor="@color/CC_1A1B24"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:src="@mipmap/common_list_arrow_right" />

                </RelativeLayout>

                <View
                    style="@style/line_style"
                    android:layout_marginLeft="@dimen/dp_15" />

                <RelativeLayout
                    android:id="@+id/re_settings_set_pay_pwd"
                    style="@style/common_item_style">

                    <TextView
                        android:id="@+id/tv_set_pay_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/CC_1A1B24"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:src="@mipmap/common_list_arrow_right" />

                </RelativeLayout>

                <View
                    android:id="@+id/line"
                    style="@style/line_style"
                    android:layout_marginLeft="@dimen/dp_15" />

                <RelativeLayout
                    android:id="@+id/re_settings_touch_id"
                    style="@style/common_item_style">

                    <TextView
                        android:id="@+id/tv_touch_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="@string/Setting_K0"
                        android:textColor="@color/CC_1A1B24"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:src="@mipmap/common_list_arrow_right" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/re_settings_language"
                style="@style/common_item_style"
                android:layout_marginTop="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:text="@string/Setting_J0"
                    android:textColor="@color/CC_1A1B24"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/common_list_arrow_right" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/CC_FFFFFF"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/re_settings_about"
                    style="@style/common_item_style">

                    <TextView
                        android:id="@+id/tv_set_about"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="@string/Setting_E0"
                        android:textColor="@color/CC_1A1B24"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:src="@mipmap/common_list_arrow_right" />

                </RelativeLayout>

                <View
                    style="@style/line_style"
                    android:layout_marginLeft="@dimen/dp_15" />

                <RelativeLayout
                    android:id="@+id/re_settings_help"
                    style="@style/common_item_style">

                    <TextView
                        android:id="@+id/tv_set_help"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="@string/Setting_F0"
                        android:textColor="@color/CC_1A1B24"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:src="@mipmap/common_list_arrow_right" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/re_settings_logOut"
                style="@style/common_item_style"
                android:layout_marginTop="@dimen/dp_30">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/Setting_G0"
                    android:textColor="@color/CC_3E4050"
                    android:textSize="@dimen/text_size_15" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
