<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CC_F1F2F6"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_title_common" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/common_ending_success"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_bank_account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center_horizontal"
        android:text="@string/BankAccountEnding_B0"
        android:textColor="@color/CC_1A1B24"
        android:textSize="@dimen/text_size_15" />

    <Button
        android:id="@+id/btn_bank_account_confirm"
        style="@style/btn_sure"
        android:layout_marginBottom="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_25"
        android:text="@string/BankAccountEnding_C0" />

</LinearLayout>
