<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:id="@+id/item_key"
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="key"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_toLeftOf="@id/item_registered"
            android:layout_toRightOf="@id/item_key"
            android:text="Merchant Name"
            android:textColor="@color/CC_3E4050"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/item_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/id_auth_registered"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:id="@+id/item_bottom_divider"
        style="@style/line_style"
        android:layout_marginLeft="@dimen/dp_15" />

</LinearLayout>
