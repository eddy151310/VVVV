<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/CC_F1F2F6"
    android:orientation="vertical">

    <include layout="@layout/layout_title_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/CC_FFFFFF">

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:textSize="@dimen/text_size_14"
            android:text="@string/LoginAccount_B0"
            android:textColor="@color/CC_282934" />

    </LinearLayout>

    <LinearLayout
        style="@style/item_bg_style"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_region_tip"

            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="@string/LoginAccount_E0"
            android:textColor="@color/CC_282934"
            android:textSize="@dimen/text_size_15"
            android:layout_marginLeft="@dimen/dp_15"/>
        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/CC_282934"
            android:textSize="@dimen/text_size_15"
            android:layout_marginLeft="@dimen/dp_15"/>


    </LinearLayout>

    <RelativeLayout
        android:focusableInTouchMode="true"
        android:focusable="true"
        style="@style/item_bg_style">

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/tv_62"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/CC_282934"
            android:textSize="@dimen/text_size_14" />

        <com.ahdi.lib.utils.widgets.DeleteEditText
            android:id="@+id/et_phone"
            style="@style/normal_editText_style"
            android:layout_centerVertical="true"
            android:hint="@string/LoginAccount_C0"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_toRightOf="@id/tv_62"
            android:textColor="@color/CC_282934"
            android:inputType="number"
            android:textColorHint="@color/CC_919399"
            app:deleteIcon="@mipmap/common_clear_edt"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        style="@style/btn_sure"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/LoginAccount_D0"
        android:enabled="false"/>

</LinearLayout>