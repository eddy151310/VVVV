<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CC_FFFFFF">

    <include
        android:id="@+id/verify_code_title"
        layout="@layout/layout_title_common" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify_code_title"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/master_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_40"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/SignUpVerify_B0"
                android:textColor="@color/CC_3E4050"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_tip_text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_25"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />

            <include
                layout="@layout/layout_edt_otp_common" />

            <Button
                android:id="@+id/verify_btn_next"
                style="@style/btn_sure"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/SignUpVerify_C0" />

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:padding="@dimen/dp_10"
                android:text="@string/SignUpVerify_D0"
                android:textColor="@color/common_link_text_color_black"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_phone_no_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:padding="@dimen/dp_10"
        android:text="@string/SignUpVerify_F0"
        android:textColor="@color/common_link_text_color_black"
        android:textSize="@dimen/text_size_14" />

</RelativeLayout>