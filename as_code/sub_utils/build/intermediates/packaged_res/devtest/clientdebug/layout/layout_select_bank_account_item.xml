<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:background="@drawable/selector_bg_common_item">

        <ImageView
            android:id="@+id/bank_account_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/common_pay_type_icon_default" />

        <ImageView
            android:id="@+id/iv_bank_account_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/common_check"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_bank_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_23"
            android:layout_toLeftOf="@+id/iv_bank_account_check"
            android:layout_toRightOf="@+id/bank_account_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bank_account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_bank_account_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

        <View
            android:id="@+id/view_bottom_divide"
            style="@style/line_style"
            android:layout_alignLeft="@+id/ll_bank_account"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</RelativeLayout>
