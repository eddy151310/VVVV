<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CC_F1F2F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/CC_FFFFFF"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/layout_title_common" />

        <!--头像区域-->
        <RelativeLayout
            android:id="@+id/rl_user_photo_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="@drawable/selector_bg_common_item"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/Profile_B0"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_user_photo"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@mipmap/me_img_user_avatar" />

                <ImageView
                    style="@style/common_right_arrow_style"
                    android:layout_centerVertical="true" />

            </LinearLayout>

        </RelativeLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/dp_15" />

        <!--Nick Name 区域-->
        <LinearLayout
            android:id="@+id/rl_user_name_area"
            style="@style/common_item_style"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/dp_110"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/Profile_C0"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/user_nname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/CC_5F5F67"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <ImageView
                style="@style/common_right_arrow_style"
                android:layout_centerVertical="true" />
        </LinearLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/dp_15" />

        <!--gender性别-->
        <LinearLayout
            android:id="@+id/ll_user_gender_area"
            style="@style/common_item_style"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/dp_110"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/Profile_D0"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/user_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:hint="@string/Profile_E0"
                    android:singleLine="true"
                    android:textColor="@color/CC_5F5F67"
                    android:textColorHint="@color/CC_5F5F67"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <ImageView
                style="@style/common_right_arrow_style"
                android:layout_centerVertical="true" />
        </LinearLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/dp_15" />

        <!--手机号-->
        <RelativeLayout
            style="@style/common_item_style"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/dp_110"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/Profile_H0"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/dp_15" />

        <!--email-->
        <LinearLayout
            android:id="@+id/ll_user_email_area"
            style="@style/common_item_style"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/dp_110"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/Profile_I0"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:hint="@string/Profile_J0"
                    android:singleLine="true"
                    android:textColor="@color/CC_5F5F67"
                    android:textColorHint="@color/CC_5F5F67"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <ImageView
                style="@style/common_right_arrow_style"
                android:layout_centerVertical="true" />
        </LinearLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/dp_15" />

        <!--birthday-->
        <LinearLayout
            android:id="@+id/ll_user_birth_area"
            style="@style/common_item_style"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/dp_110"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/Profile_K0"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/user_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:hint="@string/Profile_L0"
                    android:singleLine="true"
                    android:textColor="@color/CC_5F5F67"
                    android:textColorHint="@color/CC_5F5F67"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <ImageView
                style="@style/common_right_arrow_style"
                android:layout_centerVertical="true" />
        </LinearLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/dp_15"
            android:visibility="gone"/>

        <!--userID-->
        <RelativeLayout
            style="@style/common_item_style"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/dp_110"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/Profile_M0"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
