<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_red_send_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/CC_FFFFFF">

    <RelativeLayout
        android:id="@+id/re_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_55"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_received_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_send_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/CC_BEBEC0"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_received_name"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/CC_BEBEC0"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_send_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_received_name"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/CC_D63031"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <View
        android:id="@+id/view_divide"
        android:layout_below="@id/re_item"
        style="@style/line_style" />

</RelativeLayout>
