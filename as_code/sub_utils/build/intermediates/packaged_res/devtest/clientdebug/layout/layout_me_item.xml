<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="@drawable/selector_bg_common_item"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_icon"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_15" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/iv_item_arrow">

            <TextView
                android:id="@+id/item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/CC_5F5F67"
                android:textSize="@dimen/text_size_12" />

            <ImageView
                android:id="@+id/iv_reg_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone" />

        </RelativeLayout>

        <ImageView
            android:id="@id/iv_item_arrow"
            style="@style/common_right_arrow_style" />

        <View
            android:id="@+id/me_item_line"
            style="@style/line_style"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>
