<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/dp_120"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_web_error_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/common_network_error" />

    <TextView
        android:id="@+id/tv_web_error_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_8"
        android:singleLine="true"
        android:textColor="@color/CC_1A1B24"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/tv_web_error_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@color/CC_5F5F67"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_network_error_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_refresh_btn"
        android:paddingBottom="@dimen/dp_11"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25"
        android:paddingTop="@dimen/dp_11"
        android:textColor="@color/CC_3E4050"
        android:textSize="@dimen/text_size_15" />

</LinearLayout>