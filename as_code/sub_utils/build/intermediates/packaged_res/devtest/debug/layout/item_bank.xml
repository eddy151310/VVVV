<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_catagory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/CC_5F5F67"
        android:textSize="@dimen/text_size_14" />

    <View
        android:id="@+id/line_view"
        style="@style/line_style"
        android:layout_below="@id/tv_catagory" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_below="@id/line_view"
        android:background="@color/CC_FFFFFF">

        <TextView
            android:id="@+id/tv_bankName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="sgs"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_bankCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_25"
            android:text="sgs"
            android:textColor="@color/CC_BEBEC0"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>