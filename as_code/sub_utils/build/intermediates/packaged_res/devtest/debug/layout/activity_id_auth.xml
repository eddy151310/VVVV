<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CC_F1F2F6">
    <!--title-->
    <include
        android:id="@+id/title"
        layout="@layout/layout_title_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

             <!--认证种类选择区域-->
             <LinearLayout
                 android:id="@+id/rl_id_auth_type"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_55"
                 android:layout_marginTop="@dimen/dp_15"
                 android:orientation="horizontal"
                 android:gravity="center_vertical"
                 android:background="@drawable/selector_bg_common_item">

                 <TextView
                     android:layout_width="@dimen/dp_100"
                     android:layout_height="wrap_content"
                     android:text="@string/Identity_Auth_B0"
                     android:textSize="@dimen/text_size_14"
                     android:textColor="@color/CC_282934"
                     android:layout_marginLeft="@dimen/dp_15"/>

                 <TextView
                     android:id="@+id/tv_auth_type"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:textSize="@dimen/text_size_14"
                     android:textColor="@color/CC_282934"
                     android:layout_centerInParent="true"
                     android:layout_marginLeft="@dimen/dp_10"/>

                <!-- <ImageView
                     android:layout_centerVertical="true"
                     style="@style/common_right_arrow_style"
                     android:layout_marginLeft="@dimen/dp_15"/>-->

             </LinearLayout>

             <FrameLayout
                 android:id="@+id/fl_container"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

             </FrameLayout>

         </LinearLayout>

    </ScrollView>


</LinearLayout>