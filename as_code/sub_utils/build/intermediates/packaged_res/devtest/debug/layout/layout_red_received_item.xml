<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_red_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/CC_FFFFFF">

    <View
        android:id="@+id/divider_top"
        style="@style/line_style"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/re_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_55"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_received_item_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:background="@mipmap/me_img_user_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_received_item_icon"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_received_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/CC_1A1B24"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_received_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/CC_BEBEC0"
                    android:textSize="@dimen/text_size_12" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/tv_received_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/CC_BEBEC0"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_best_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/CC_D63031"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


    <View
        android:id="@+id/view_divide"
        android:layout_below="@id/re_item"
        style="@style/line_style" />

</RelativeLayout>
