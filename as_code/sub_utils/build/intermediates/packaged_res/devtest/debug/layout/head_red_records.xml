<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_head"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CC_F1F2F6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_head_user_icon"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/me_img_user_avatar" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_head_user_icon"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_head_received_env_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have received5 envelopes"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_head_received_env_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_head_received_env_num"
                android:textColor="@color/CC_D63031"
                android:textSize="@dimen/text_size_17" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_22"
        android:layout_marginBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/head_received_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textColor="@color/CC_BEBEC0"
            android:textSize="@dimen/text_size_12" />

        <RelativeLayout
            android:id="@+id/re_head_select_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_select_time"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22" />

        </RelativeLayout>

    </RelativeLayout>

    <View style="@style/line_style" />

</LinearLayout>
