<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/common_top_rounded_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="@string/PhotoType_A0"
        android:textColor="@color/CC_919399"
        android:textSize="@dimen/text_size_12" />

    <View
        style="@style/line_style" />

    <TextView
        android:id="@+id/tv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="@drawable/selector_bg_common_item"
        android:gravity="center"
        android:text="@string/PhotoType_B0"
        android:textColor="@color/CC_282934"
        android:textSize="@dimen/text_size_17" />

    <View
        style="@style/line_style" />

    <TextView
        android:id="@+id/tv_album"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="@drawable/selector_bg_common_item"
        android:gravity="center"
        android:text="@string/PhotoType_C0"
        android:textColor="@color/CC_282934"
        android:textSize="@dimen/text_size_17" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/CC_F1F2F6" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/selector_bg_common_item"
        android:gravity="center"
        android:text="@string/PhotoType_D0"
        android:textColor="@color/CC_282934"
        android:textSize="@dimen/text_size_17" />

</LinearLayout>
