<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_top_rounded_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/click_top_left_rounded_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:text="@string/DialogButton_A0"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/click_top_right_rounded_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:text="@string/DialogButton_B0"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_17" />

    </RelativeLayout>

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <com.ahdi.lib.utils.widgets.datepicker.WheelView
            android:id="@+id/gender_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:isLoop="false"
            app:lineColor="@color/CC_E6E6E9"
            app:lineSpaceingDimens="@dimen/dp_15"
            app:textColorCenter="@color/CC_282934"
            app:textColorOuter="@color/CC_919399"
            app:textSizeCenter="@dimen/text_size_20"
            app:textSizeOuter="@dimen/text_size_17"
            app:wheelGravity="center" />

    </LinearLayout>

</LinearLayout>