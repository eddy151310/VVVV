<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CC_F1F2F6"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_title_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/CC_FFFFFF"
        android:layout_marginTop="@dimen/dp_15">

        <RelativeLayout
            android:id="@+id/rl_language_en"
            style="@style/common_item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/SettingLanguage_B0"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/iv_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/common_check" />
        </RelativeLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/dp_15"/>

        <RelativeLayout
            android:id="@+id/rl_language_in"
            style="@style/common_item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/SettingLanguage_C0"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/iv_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/common_check"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
