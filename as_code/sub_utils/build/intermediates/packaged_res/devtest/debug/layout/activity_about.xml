<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CC_FFFFFF">

    <include
        android:id="@+id/title"
        layout="@layout/layout_title_common" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/about_logo_mbm"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"/>


    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/CC_1A1B24"
        android:layout_below="@id/iv_icon"
        android:textSize="@dimen/text_size_17"/>


    <RelativeLayout
        android:id="@+id/rl_update"
        android:layout_marginTop="@dimen/dp_25"
        style="@style/common_item_style"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_55"
        android:layout_below="@id/tv_app_version"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="@string/About_B0"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/common_list_arrow_right" />

        <View
            style="@style/line_style"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_agreement"
        style="@style/common_item_style"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_below="@id/rl_update">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="@string/About_C0"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/common_list_arrow_right" />

        <View
            style="@style/line_style"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/common_logo_ahdi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/About_D0"
            android:textSize="@dimen/text_size_12"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/CC_919399"/>

    </LinearLayout>


</RelativeLayout>
