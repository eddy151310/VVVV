<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/CC_FFFFFF">

    <View
        android:id="@+id/view_top_divide"
        android:layout_alignParentTop="true"
        style="@style/line_style"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_transaction_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/view_top_divide"
        android:background="@color/CC_F1F2F6"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:textColor="@color/CC_1A1B24"
        android:textSize="@dimen/text_size_12"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/re_item"
        android:layout_width="wrap_content"
        android:background="@drawable/selector_bg_common_item"
        android:layout_height="@dimen/dp_70"
        android:layout_below="@id/tv_transaction_date"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_transaction_icon"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_centerVertical="true"
            android:src="@mipmap/common_pay_type_icon_default" />

        <TextView
            android:id="@+id/tv_transaction_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toLeftOf="@id/tv_transaction_money"
            android:layout_toRightOf="@id/iv_transaction_icon"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_transaction_time"
            android:layout_height="@dimen/dp_25"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_below="@id/tv_transaction_title"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_transaction_icon"
            android:textColor="@color/CC_919399"
            android:textSize="@dimen/text_size_12" />


        <TextView
            android:id="@+id/tv_transaction_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_transaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_transaction_money"
            android:layout_marginBottom="@dimen/dp_15"
            android:textColor="@color/CC_C31617"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

</RelativeLayout>
