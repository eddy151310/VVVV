<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CC_FFFFFF">

    <RelativeLayout
        android:id="@+id/rl_guide_unlock_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/dp_8">

        <TextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_28"
            android:background="@drawable/selector_bg_btn_unlock_skip"
            android:gravity="center"
            android:text="@string/GuideBiometryLogin_A0"
            android:textColor="@color/CC_3E4050"
            android:textSize="@dimen/text_size_12" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_guide_unlock_skip"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_90"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_35"
                android:gravity="center_horizontal"
                android:text="@string/GuideBiometryLogin_B0"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_17" />

            <ImageView
                android:id="@+id/iv_verify_touchID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_100"
                android:background="@drawable/touch_id_verify_login_switch"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_100"
                android:gravity="center"
                android:text="@string/GuideBiometryLogin_C0"
                android:textColor="@color/CC_D63031"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10">

        <CheckBox
            android:id="@+id/cb_next_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/cb_next_skip"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cb_next_skip"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/GuideBiometryLogin_E0"
            android:textColor="@color/CC_3E4050"
            android:textSize="@dimen/text_size_12" />

    </RelativeLayout>


</RelativeLayout>