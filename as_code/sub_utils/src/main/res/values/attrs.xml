<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SivinBanner">
        <!-- 指示点容器背景 -->
        <attr name="banner_pointContainerBackground" format="reference|color" />
        <!-- 指示点背景 -->
        <attr name="banner_pointDrawable" format="reference" />
        <!-- 指示点容器左右内间距 -->
        <attr name="banner_pointContainerLeftRightPadding" format="dimension" />
        <!-- 指示点上下外间距 -->
        <attr name="banner_pointTopBottomMargin" format="dimension" />
        <!-- 指示点左右外间距 -->
        <attr name="banner_pointLeftRightMargin" format="dimension" />
        <!-- 指示点的位置 -->
        <attr name="banner_pointGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_horizontal" value="0x01" />
        </attr>
        <!-- 默认图片 -->
        <attr name="banner_default_image" format="reference" />
        <!-- 自动轮播的时间间隔 -->
        <attr name="banner_pointAutoPlayInterval" format="integer" />
        <!-- 页码切换过程的时间长度 -->
        <attr name="banner_pageChangeDuration" format="integer" />
        <!-- 提示文案的文字颜色 -->
        <attr name="banner_tipTextColor" format="reference|color" />
        <!-- 提示文案的文字大小 -->
        <attr name="banner_tipTextSize" format="dimension" />
        <!--viewPager 内padding-->
        <attr name="banner_ViewPager_padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="WheelView">
        <attr name="itemVisibleNum" format="integer"/>
        <attr name="textColorOuter" format="color" />
        <attr name="textSizeOuter" format="dimension" />
        <attr name="textColorCenter" format="color" />
        <attr name="textSizeCenter" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="isLoop" format="boolean"/>
        <attr name="lineSpaceingDimens" format="dimension"/>
        <attr name="wheelGravity" format="enum" >
            <enum name="left" value="234"/>
            <enum name="center" value="354"/>
            <enum name="right" value="894"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PagerIndicatorView">
        <!--点的个数-->
        <attr name="itemCount" format="integer"/>
        <!--默认显示的icon-->
        <attr name="default_icon" format="reference"/>
        <!--选中的icon-->
        <attr name="selected_icon" format="reference"/>
        <!--icon的右边距-->
        <attr name="icon_right_margin" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <!--设计图上的宽度-->
        <attr name="design_width" format="integer"/>
        <!--设计图上的高度-->
        <attr name="design_height" format="integer"/>
    </declare-styleable>

    <declare-styleable name="DeleteEditText">
        <attr name="deleteIcon" format="reference"/>
    </declare-styleable>



    <declare-styleable name="MaterialHeader">
        <attr name="mhPrimaryColor" format="color" />
        <attr name="mhShadowColor" format="color" />
        <attr name="mhShadowRadius" format="dimension"/>
        <attr name="mhShowBezierWave" format="boolean"/>
    </declare-styleable>

</resources>