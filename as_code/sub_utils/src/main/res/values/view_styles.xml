<resources>

    <!--确定按钮-->
    <style name="btn_sure">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_49</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
        <item name="android:background">@drawable/selector_bg_common_btn</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textColor">@drawable/selector_color_btn</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--通用的item -->
    <style name="common_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@drawable/selector_bg_common_item</item>
    </style>

    <!--通用divider-->
    <style name="line_style">
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/CC_E6E6E9</item>
    </style>

</resources>
