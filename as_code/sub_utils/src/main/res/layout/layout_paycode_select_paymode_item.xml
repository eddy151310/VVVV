<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_payTypeItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_common_item"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tip_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/CC_EFEFF1"
        android:padding="@dimen/dp_15"
        android:text="@string/ShowPayQR_E0"
        android:textColor="@color/CC_5F5F67"
        android:textSize="@dimen/text_size_12" />

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <ImageView
            android:id="@id/iv_icon"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/common_pay_type_icon_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toLeftOf="@+id/iv_check"
            android:layout_toRightOf="@+id/iv_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_payTypeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_bank_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:singleLine="true"
                android:visibility="gone"
                android:textColor="@color/CC_5F5F67"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/common_check"
            android:visibility="visible" />

        <View
            android:id="@+id/view_bottom_line"
            style="@style/line_style"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</LinearLayout>