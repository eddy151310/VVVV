<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/CC_00000000"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_295"
        android:layout_gravity="center"
        android:background="@drawable/common_rounded_white_bg">

        <ImageView
            android:id="@+id/iv_sigup_qr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_30" />

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_25"
        android:src="@mipmap/common_icon_toast_close" />

</LinearLayout>