<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/CC_F1F2F6"
    android:orientation="vertical">

    <!--时间 2017-12-16 22:12-->
    <TextView
        android:id="@+id/message_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="2017-12-16 22:12"
        android:textColor="@color/CC_BEBEC0"
        android:textSize="@dimen/text_size_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:background="@color/CC_FFFFFF">

        <View style="@style/line_style" />

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/transfer_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/CC_D63031"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/transfer_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_title"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/text_size_12" />

        <View
            android:id="@+id/view_bottom_divide"
            style="@style/line_style"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</LinearLayout>
