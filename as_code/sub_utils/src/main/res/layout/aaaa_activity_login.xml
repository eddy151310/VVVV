<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CC_FFFFFF"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">
            <!--账号输入框-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_25"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_area_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="+86"
                    android:textColor="@color/CC_282934"
                    android:textSize="@dimen/dp_15" />

                <com.ahdi.lib.utils.widgets.DeleteEditText
                    android:id="@+id/et_login_phone_number"
                    style="@style/et_id_info"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawablePadding="@dimen/dp_20"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:paddingRight="@dimen/dp_15" />

            </LinearLayout>

            <!-- 下划线 -->
            <View
                style="@style/line_style"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_5" />

            <!--手机号码错误提示-->
            <TextView
                android:id="@+id/tv_login_number_error_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_5"
                android:text="错误"
                android:textColor="@color/CC_1A1B24"
                android:textSize="@dimen/dp_12"
                android:visibility="gone" />

            <!--验证码-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:saveEnabled="true">

                <com.ahdi.lib.utils.widgets.DeleteEditText
                    android:id="@+id/et_verify_code"
                    style="@style/et_id_info"
                    android:layout_toLeftOf="@id/tv_send_code"
                    android:drawablePadding="@dimen/dp_20"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_15" />

                <TextView
                    android:id="@+id/tv_send_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:enabled="false"
                    android:padding="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textColor="@color/CC_282934"
                    android:text="验证码"
                    android:textSize="@dimen/dp_15" />

            </RelativeLayout>

            <!-- 下划线 -->
            <View
                style="@style/line_style"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_5" />

            <TextView
                android:id="@+id/btn_submit"
                style="@style/button_common_style"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="0dp"
                android:enabled="false"
                android:gravity="center"
                android:text="登录" />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/ll_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:text="登录代表您已同意"
            android:textColor="@color/CC_3E4050"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:text="《XXXX用户协议》"
            android:textColor="@color/CC_3E4050"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>