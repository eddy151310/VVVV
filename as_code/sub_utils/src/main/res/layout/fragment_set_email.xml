<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@color/CC_F1F2F6">

    <RelativeLayout
        style="@style/item_bg_style"
        android:layout_marginTop="@dimen/dp_15">

        <com.ahdi.lib.utils.widgets.DeleteEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_.@-"
            android:hint="@string/SetEmail_B0"
            android:longClickable="false"
            android:background="@color/CC_00000000"
            android:textColor="@color/CC_1A1B24"
            android:textSize="@dimen/text_size_15"
            app:deleteIcon="@mipmap/common_clear_edt"
            android:drawablePadding="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        style="@style/button_common_style"
        android:enabled="false"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_25"
        android:text="@string/SetEmail_C0"/>

</LinearLayout>