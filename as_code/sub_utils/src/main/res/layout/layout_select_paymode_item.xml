<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bg_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_item_pay_mode">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_centerVertical="true"
            android:src="@mipmap/common_pay_type_icon_default" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/iv_icon"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_payTypeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/CC_282934"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_payType_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_payTypeName"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/CC_5F5F67"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/common_check"
            android:visibility="visible" />

        <View
            android:id="@+id/view_bottom_line"
            style="@style/line_style"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</RelativeLayout>